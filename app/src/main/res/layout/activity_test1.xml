<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/app_bar"
        layout="@layout/tittle_left" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/studentName"
            android:paddingLeft="5dp"
            android:text="Дүние жүзінде қазіргі кезде ... монархия бар "
            android:textSize="18dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"></TextView>

        <Button
            android:id="@+id/varA"
            style="@style/myCustomButton"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/studentName"
            android:text="A) 24-25 "
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="16dp"></Button>

        <Button
            android:id="@+id/varB"
            style="@style/myCustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/studentName"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:text="B) 30-31 "
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="16dp"></Button>

        <Button
            android:id="@+id/varC"
            style="@style/myCustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/studentName"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:text="C) 28-29 "
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="16dp"></Button>

        <Button
            android:id="@+id/varD"
            style="@style/myCustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/studentName"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:text="D) 40-41 "
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="16dp"></Button>

        <Button
            android:id="@+id/varE"
            style="@style/myCustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/studentName"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:text="E) 45-46 "
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="16dp"></Button>

        <TextView
            android:id="@+id/testNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/studentName"
            android:lineSpacingExtra="18sp"
            android:paddingTop="15dp"
            android:text="1/25"
            android:textAlignment="center"
            android:textSize="16dp"
            android:paddingBottom="5dp"
            android:typeface="monospace"></TextView>

    </LinearLayout>


</RelativeLayout>